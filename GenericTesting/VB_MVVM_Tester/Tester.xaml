<Window x:Class="Tester"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VB_MVVM_Tester"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="525"
        Background="{StaticResource brushMainBoard}">
  <Window.Resources>
    <Style TargetType="{x:Type DataGridColumnHeader}">
      <Setter Property="Background" Value="Transparent" />
      <Setter Property="FontWeight" Value="Bold" />
    </Style>
    <Style TargetType="{x:Type DataGridRowHeader}">
      <Setter Property="Background" Value="Transparent" />
    </Style>
  </Window.Resources>
  <StackPanel>
    <Border>
      <Grid Margin="5">
        <Border x:Name="BDRounded" CornerRadius="15" Background="{StaticResource brushMainBoard}" />
        <DataGrid Grid.Row="1" x:Name="ShipDetails" ItemsSource="{Binding Stuff}" Height="100" Foreground="{StaticResource brushMainText}"      BorderThickness="0"              
                 Background="Transparent" RowBackground="Transparent"   GridLinesVisibility="None" 
                 IsReadOnly="True" HorizontalAlignment="Center" FontSize="20">
        </DataGrid>
      </Grid>
    </Border>
  </StackPanel>
</Window>
