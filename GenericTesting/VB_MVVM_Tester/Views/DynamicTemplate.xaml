<UserControl x:Class="DynamicTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VB_MVVM_Tester"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
    <ListBox Width="800" Height="100"  ItemTemplateSelector="{StaticResource BoatTemplateSelector}" ItemsSource="{Binding Items}">
      <ListBox.ItemsPanel>
        <ItemsPanelTemplate>
          <StackPanel IsItemsHost="True" Orientation="Horizontal"/>
        </ItemsPanelTemplate>
      </ListBox.ItemsPanel>
      <!--<local:Stuff Id="1" Value="A" ShipType="Owned" MoreStuff="I have more stuff" />
      <local:Stuff Id="2" Value="B" ShipType="Contractor" MoreStuff="I have even more stuff" />-->
    </ListBox>
  </Grid>
</UserControl>
