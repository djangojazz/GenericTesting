<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <LinearGradientBrush x:Key="DefaultBrush" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="Teal" Offset="0" />
        <GradientStop Color="DarkTurquoise" Offset="1" />
    </LinearGradientBrush>
    
    <Style TargetType="Border">
        <Setter Property="Background" Value="{StaticResource DefaultBrush}" />
        <Setter Property="BorderBrush" Value="#071C07" />
        <Setter Property="BorderThickness" Value="3" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Margin" Value="5" />
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Margin" Value="10" />
        <Setter Property="Foreground" Value="DarkGray" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Margin" Value="8" />
        <Setter Property="Background" Value="{StaticResource DefaultBrush}" />
    </Style>
</ResourceDictionary>